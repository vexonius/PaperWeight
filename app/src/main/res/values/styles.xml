<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dirty_white</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="HeaderText" >
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolBarTitle" >
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VolumeTitleText">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VolumeAuthorText">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/light_subtitle</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="VolumeDescriptionText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">5</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="InputFieldLight">
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded_searchbar</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ShowMoreText">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemSubtext">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>


</resources>
