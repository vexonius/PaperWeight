<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?colorSurface</item>

    </style>

    <style name="GreenChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="LightChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/dirty_white</item>
        <item name="rippleColor">@color/dirty_white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

</resources>
